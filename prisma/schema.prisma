// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Xp {
  id          String   @id @db.Char(20)
  progress    BigInt   @default(0)
  level       Int      @default(0)
  last_update DateTime @default(now())

  @@map("xp")
}
